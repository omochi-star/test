<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">
    <h3 class="text-center">
        <b>
            <%= book.title %>
        </b>のレビュー記録
    </h3>
    <div class="offset-md-3 col-md-6">
        <form action="/books/<%= bookId %>/reviews" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label for="content" class="form-label">レビュー</label>
                <textarea name="review[content]" class="form-control" id="content" required></textarea>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <div class="mb-3">
                <fieldset class="starability-basic">
                    <legend>評価:</legend>
                    <input type="radio" id="first-rate1" name="review[rating]" checked value="1" />
                    <label for="first-rate1" title="1">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="2">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="3">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="4">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="5">5 stars</label>
                </fieldset>
            </div>
            <button type="submit" class="btn btn-primary">登録</button>
        </form>
    </div>