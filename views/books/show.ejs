<% layout('layouts/boilerplate') %>
    <h4>
        「<%= book.title %>」
    </h4>
    <div class="card mb-3 mt-3">
        <div class="card-body">
            <p>
                著者：<%= book.author %>
            </p>

        </div>
    </div>

    <% if(currentUser){ %>
        <a href="/books/<%= book._id  %>/reviews/new">本のレビューを投稿する</a>
        <% } %>

            <% if(currentUser && book.owner.equals(currentUser._id)){ %>
                <a class="btn btn-primary" href="/books/<%= book._id%>/edit" role="button">編集</a>
                <form class="d-inline" action="/books/<%= book._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">削除</button>
                </form>
                <% } %>