<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">
    <h1 class="mb-3">
        <%= book.title %>
    </h1>
    <h3 class="mb-3 text-body-secondary">
        <%= book.author %>
    </h3>
    <a href="/books/<%= book._id  %>/reviews/new" class="btn btn-primary mb-3">この本のレビューを投稿する</a>
    <div class="row g-0 mb-3 align-items-stretch">
        <div class="col-md-3 h-100">
            <div id="bookCarousel" class="carousel slide carousel-img mb-3 ">
                <div class="carousel-inner">
                    <% if(book.images && book.images.length>0){ %>
                        <% book.images.forEach((img,i)=> {%>
                            <div class="carousel-item <%= i === 0 ? 'active' :'' %>">
                                <img src="<%= img.url %>" class="d-block carousel-img rounded img-fluid" alt="...">
                            </div>
                            <% }) %>
                                <% }else{ %>
                                    <img src="" class=" no-image carousel-img rounded img-fluid" alt="画像なし">
                                    <% } %>
                </div>
                <% if(book.images.length>1){ %>
                    <button class="carousel-control-prev" type="button" data-bs-target="#bookCarousel"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#bookCarousel"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                    <% } %>
            </div>
        </div>
        <div class="col-md-9 h-100">
            <div class="card p-3">
                <div class="card-body p-3">
                    <p class="card-text fs-5 book-description">
                        <%= book.description %>
                    </p>
                    <p class="card-text fs-5"><small class="text-body-secondary">
                            <%= book.category %>
                        </small></p>
                    <% if(currentUser && book.owner.equals(currentUser._id)){ %>
                        <div class="mt-3">
                            <a class="btn btn-primary " href="/books/<%= book._id%>/edit" role="button">本の編集</a>
                            <form class="d-inline" action="/books/<%= book._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">本の削除</button>
                            </form>
                        </div>
                        <% } %>
                </div>
            </div>

        </div>
    </div>


    <div class="card">
        <ul class="list-group list-group-flush">
            <div class="card-header h3 p-3">
                みんなのレビュー
            </div>
            <% if(reviews.length===0){ %>
                <li class="list-group-item h-3 p-3">この本のレビューはまだありません</li>
                <% } %>
                    <% for(let review of reviews) {%>
                        <li class="list-group-item p-3">
                            <p class="fw-bold">
                                <%= review.owner.username %>
                            </p>
                            <p class="starability-result" data-rating="<%= review.rating %>">
                                評価: <%= review.rating %>
                            </p>
                            <p class="card-text multiline-ellipsis">
                                <%= review.content %>
                            </p>
                            <p>投稿日: <%= review.formattedDate %>
                            </p>
                            <a class="stretched-link" href="/reviews/<%= review._id  %>"></a>
                        </li>
                        <% } %>
        </ul>

    </div>